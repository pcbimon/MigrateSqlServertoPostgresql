# Example .env for MigrateSqlServertoPostgresql
# Copy this file to `.env` and fill in real values. Do NOT commit `.env` with secrets.

# SQL Server source connection (used by bcp, sqlcmd, or pgloader mssql URL)
MSSQL_HOST=your-mssql-host
MSSQL_PORT=1433
MSSQL_DATABASE=SourceDB
MSSQL_USER=your_mssql_user
MSSQL_PASS=your_mssql_password

# PostgreSQL target connection
PG_HOST=your-postgres-host
PG_PORT=5432
PG_DATABASE=TargetDB
PG_USER=your_pg_user
PG_PASS=your_pg_password

# Migration options
# Use pgloader for a direct migration when set to true. If false, scripts will use CSV export/import.
USE_PGLOADER=true

# Local temporary export path (for CSV files etc.)
EXPORT_DIR=C:/tmp/migration_exports

# Optional: additional flags for pgloader or transformation scripts
PGLOADER_OPTIONS=--with "data only"
